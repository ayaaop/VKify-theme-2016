{extends "@layout.xml"}

{block title}
    {_edit}
{/block}

{block heading}
    {_edit} #{$form->id ?? "undefined"}
{/block}

{block content}
    <form method="POST">
        <div class="settings_panel clear_fix group_settings settings_padding">
            <div class="settings_list_row">
                <div class="settings_label">ID</div>
                <div class="settings_labeled_text" dir="auto">{$form->id}</div>
            </div>
            <div class="settings_list_row">
                <div class="settings_label">{_admin_banned_domain}</div>
                <div class="settings_labeled_text">
                    <input class="text long-field" type="text" id="link" name="link" value="{$form->link}" />
                    <div class="settings_help">{_admin_banned_link_description}</div>
                </div>
            </div>
            <div class="settings_list_row">
                <div class="settings_label">{_admin_banned_link_regexp}</div>
                <div class="settings_labeled_text">
                    <input class="text long-field" type="text" id="regexp" name="regexp" value="{$form->regexp}" />
                    <div class="settings_help">{_admin_banned_link_regexp_description}</div>
                </div>
            </div>
            <div class="settings_list_row">
                <div class="settings_label">{_admin_banned_link_reason}</div>
                <div class="settings_labeled_text">
                    <input class="text long-field" type="text" id="reason" name="reason" value="{$form->reason}" />
                </div>
            </div>
            <div class="settings_list_row">
                <div class="settings_label"></div>
                <div class="settings_labeled_text">
                    <input type="hidden" name="hash" value="{$csrfToken}" />
                    <input class="button" type="submit" value="{_save}">
                    <a class="button button_gray" href="/admin/bannedLink/id{$form->id}/unban">{_delete}</a>
                </div>
            </div>
        </div>
    </form>
{/block}
