{extends "@layout.xml"}
{var $search = $mode === "audios"}

{block title}
    {_audios}
{/block}

{block heading}
    {_audios}
{/block}

{block searchTitle}
    {include title}
{/block}

{block content}
    {var $tabs = [
        [
            'url' => '?act=audios',
            'title' => 'audios',
            'active' => $mode === 'audios'
        ],
        [
            'url' => '?act=playlists',
            'title' => 'playlists',
            'active' => $mode === 'playlists'
        ]
    ]}

    {include "../components/page_tabs_header.xml", tabs => $tabs, white => true}

    <div class="page_padding">
        <div class="page_table_wrapper">
            <table class="page_table">
                {if $mode === "audios"}
                    {var $audios  = iterator_to_array($audios)}
                    {var $amount = sizeof($audios)}
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>{_admin_author}</th>
                            <th>{_peformer}</th>
                            <th>{_admin_title}</th>
                            <th>{_genre}</th>
                            <th>Explicit</th>
                            <th>{_withdrawn}</th>
                            <th>{_deleted}</th>
                            <th>{_created}</th>
                            <th>{_actions}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr n:foreach="$audios as $audio">
                            <td>{$audio->getId()}</td>
                            <td>
                                {var $owner = $audio->getOwner()}
                                <span class="avatar">
                                    <img src="{$owner->getAvatarUrl('miniscule')}" alt="{$owner->getCanonicalName()}" style="object-fit: cover;" role="presentation" />
                                </span>

                                <a href="{$owner->getURL()}">{$owner->getCanonicalName()}</a>

                                <span n:if="$owner->isBanned()" class="ui_tab_count" style="background-color: #e74c3c; color: white;">{_admin_banned}</span>
                            </td>
                            <td>{$audio->getPerformer()}</td>
                            <td>{$audio->getTitle()}</td>
                            <td>{$audio->getGenre()}</td>
                            <td>{$audio->isExplicit() ? tr("yes") : tr("no")}</td>
                            <td n:attr="style => $audio->isWithdrawn() ? 'color: red;' : ''">
                                {$audio->isWithdrawn() ? tr("yes") : tr("no")}
                            </td>
                            <td n:attr="style => $audio->isDeleted() ? 'color: red;' : ''">
                                {$audio->isDeleted() ? tr("yes") : tr("no")}
                            </td>
                            <td>{$audio->getPublicationTime()}</td>
                            <td>
                                <a class="button" href="/admin/music/{$audio->getId()}/edit">
                                    Редактировать
                                </a>
                            </td>
                        </tr>
                    </tbody>
                {else}
                    {var $playlists  = iterator_to_array($playlists)}
                    {var $amount     = sizeof($playlists)}
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>{_admin_author}</th>
                            <th>{_name}</th>
                            <th>{_created_playlist}</th>
                            <th>{_actions}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr n:foreach="$playlists as $playlist">
                            <td>{$playlist->getId()}</td>
                            <td>
                                {var $owner = $playlist->getOwner()}
                                <span class="avatar">
                                    <img src="{$owner->getAvatarUrl('miniscule')}" alt="{$owner->getCanonicalName()}" style="object-fit: cover;" role="presentation" />
                                </span>

                                <a href="{$owner->getURL()}">{$owner->getCanonicalName()}</a>

                                <span n:if="$owner->isBanned()" class="ui_tab_count" style="background-color: #e74c3c; color: white;">{_admin_banned}</span>
                            </td>
                            <td>
                                <span class="avatar">
                                    <img src="{$playlist->getCoverURL()}" alt="{$owner->getCanonicalName()}" style="object-fit: cover;" role="presentation" />
                                </span>
                                {ovk_proc_strtr($playlist->getName(), 30)}
                            </td>
                            <td>{$playlist->getCreationTime()}</td>
                            <td>
                                <a class="button" href="/admin/playlist/{$playlist->getId()}/edit">
                                    {_edit}
                                </a>
                            </td>
                        </tr>
                    </tbody>
                {/if}
            </table>
        </div>
        {if isset($count) && $count > 0}
            {include "../components/paginator.xml", conf => [
                'page' => $_GET['p'] ?? 1,
                'count' => $count,
                'perPage' => 10,
                'atBottom' => true
            ]}
        {/if}
    </div>
{/block}
