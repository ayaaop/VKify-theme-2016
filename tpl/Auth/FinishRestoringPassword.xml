{extends "../@layout.xml"}

{block title}
    {_access_recovery}
{/block}

{block header}
    {_page_access_recovery}
{/block}

{block content}
    <div class="page_block">
        <div class="settings_block_msg">
                {_access_recovery_info_2}
        </div>
        <form method="POST" enctype="multipart/form-data">
            <div class="form_group clear_fix label_end settings_padding">
                <div class="form_field">
                    <div class="form_label">{_new_password}</div>
                    <div class="form_data">
                        <input class="text long-field" id="password" type="password" name="password" required />
                    </div>
                </div>
                {if $is2faEnabled}
                <div class="form_field">
                    <div class="form_label">{_"2fa_code_2"}</div>
                    <div class="form_data">
                        <input class="text long-field" id="code2fa" type="text" name="code2fa" required />
                    </div>
                </div>
                {/if}
                <div class="form_field">
                    <div class="form_label"></div>
                    <div class="form_data">
                        <input type="hidden" name="hash" value="{$csrfToken}" />
                        <input type="submit" value="{_reset_password}" class="button" />
                    </div>
                </div>
            </div>
        </form>
    </div>
{/block}
