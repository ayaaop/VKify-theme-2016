                                    <div class="form_data">
                                        <select name="main_page">
                                            <option value="0" {if !$user->getMainPage()}selected{/if}>{_my_page}</option>
                                            <option value="1" {if $user->getMainPage()}selected{/if}>{_my_feed}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form_field">
                                    <div class="form_label">&nbsp;</div>
