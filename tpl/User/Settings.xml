                                        <label class="checkbox"><input type="checkbox" name="mode_2018" value="1"> <span><vkifyloc name="mode_2018"></vkifyloc></span></label>
                                        <label class="checkbox"><input type="checkbox" name="theme_for_session" value="1"> {_apply_style_for_this_device}</label>
                                    </div>
                                <script>
                                    (function(){
                                        function getCookie(name) {
                                            var m = document.cookie.match(new RegExp('(?:^|; )' + name.replace(/([.$?*|{}()\[\]\\\/\+^])/g, '\\$1') + '=([^;]*)'));
                                            return m ? decodeURIComponent(m[1]) : null;
                                        }
                                        function setCookie(name, value, days) {
                                            var expires = '';
                                            if (days) {
                                                var d = new Date();
                                                d.setTime(d.getTime() + (days*24*60*60*1000));
                                                expires = '; expires=' + d.toUTCString();
                                            }
                                            document.cookie = name + '=' + encodeURIComponent(value) + expires + '; path=/; SameSite=Lax';
                                        }
                                        function deleteCookie(name) {
                                            document.cookie = name + '=; Max-Age=0; expires=Thu, 01 Jan 1970 00:00:00 GMT; path=/; SameSite=Lax';
                                        }
                                        function initDarkModeToggle() {
                                            var checkbox = document.querySelector('input[name="theme_mode"]');
                                            if (!checkbox) return;
                                            var isDarkMode = getCookie('vkify16_darkmode') === '1';
                                            checkbox.checked = isDarkMode;
                                            if (window.toggleDarkMode) {
                                                window.toggleDarkMode(isDarkMode);
                                            }
                                            checkbox.onchange = function() {
                                                var enabled = this.checked;
                                                if (enabled) {
                                                    setCookie('vkify16_darkmode', '1', 365);
                                                } else {
                                                    deleteCookie('vkify16_darkmode');
                                                }
                                                if (window.toggleDarkMode) {
                                                    window.toggleDarkMode(enabled);
                                                }
                                            };
                                        }
                                        function init2018ModeToggle() {
                                            var checkbox = document.querySelector('input[name="mode_2018"]');
                                            if (!checkbox) return;
                                            var is2018 = getCookie('vkify16_2018mode') === '1';
                                            checkbox.checked = is2018;
                                            if (window.toggle2018Mode) {
                                                window.toggle2018Mode(is2018);
                                            }
                                            checkbox.onchange = function() {
                                                var enabled = this.checked;
                                                if (enabled) {
                                                    setCookie('vkify16_2018mode', '1', 365);
                                                } else {
                                                    deleteCookie('vkify16_2018mode');
                                                }
                                                if (window.toggle2018Mode) {
                                                    window.toggle2018Mode(enabled);
                                                }
                                            };
                                        }
                                        if (window.toggleDarkMode) {
                                            initDarkModeToggle();
                                            init2018ModeToggle();
                                        } else {
                                            window.addEventListener('load', initDarkModeToggle);
                                            window.addEventListener('load', init2018ModeToggle);
                                        }
                                    })();
                                </script>
                                </div>
                                <div class="form_field">
